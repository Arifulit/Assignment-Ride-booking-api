{
  "info": {
    "name": "Ride Booking API",
    "description": "Complete API collection for the Ride Booking System",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api/v1",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Rider",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.rider@example.com\",\n  \"password\": \"password123\",\n  \"phone\": \"+1234567890\",\n  \"role\": \"rider\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Register Driver",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Smith\",\n  \"email\": \"jane.driver@example.com\",\n  \"password\": \"password123\",\n  \"phone\": \"+1234567891\",\n  \"role\": \"driver\",\n  \"licenseNumber\": \"DL123456789\",\n  \"vehicleInfo\": {\n    \"make\": \"Toyota\",\n    \"model\": \"Camry\",\n    \"year\": 2020,\n    \"color\": \"White\",\n    \"plateNumber\": \"ABC-1234\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.rider@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('authToken', response.data.tokens.accessToken);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Rides",
      "item": [
        {
          "name": "Request Ride",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"pickupLocation\": {\n    \"address\": \"123 Main St, New York\",\n    \"coordinates\": {\n      \"type\": \"Point\",\n      \"coordinates\": [-74.006, 40.7128]\n    }\n  },\n  \"destination\": {\n    \"address\": \"456 Oak Ave, New York\",\n    \"coordinates\": {\n      \"type\": \"Point\",\n      \"coordinates\": [-74.012, 40.7589]\n    }\n  },\n  \"rideType\": \"economy\",\n  \"paymentMethod\": \"cash\",\n  \"notes\": \"Please call when you arrive\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/rides/request",
              "host": ["{{baseUrl}}"],
              "path": ["rides", "request"]
            }
          }
        },
        {
          "name": "Get My Rides",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/rides/my-rides?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["rides", "my-rides"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Driver",
      "item": [
        {
          "name": "Update Availability",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"isOnline\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/drivers/availability",
              "host": ["{{baseUrl}}"],
              "path": ["drivers", "availability"]
            }
          }
        },
        {
          "name": "Get Pending Rides",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/drivers/rides/pending",
              "host": ["{{baseUrl}}"],
              "path": ["drivers", "rides", "pending"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/admin/users?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "users"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Approve Driver",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"notes\": \"All documents verified and approved\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/drivers/:driverId/approve",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "drivers", ":driverId", "approve"]
            }
          }
        }
      ]
    }
  ]
}